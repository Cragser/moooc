{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	{{ include('components/header.html.twig') }}
	<div class="container">
		<div class="row">
			<div class="col s8 offset-s2">
				<div id="main" class="posts-content" role="main">
					<div class="card ">
						<div class="card-content">
							<form method="post">
								{% if error %}
									<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
								{% endif %}
								{% if app.user %}
									<div class="mb-3">
										Estás registrado como
										{{ app.user.username }},
										<a href="{{ path('app_logout') }}">Cerrar sesión</a>
									</div>
								{% endif %}
								<label for="inputEmail">Tú email</label>
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
								<label for="inputPassword">Tú contraseña</label>
								<input type="password" name="password" id="inputPassword" class="form-control" required>
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
								<button class="btn bg-action center-content" type="submit">
									Iniciar sesión
								</button>
							</form>
						</div>
						<div class="card-action">
							<a href="#" class="link-notary">¿Olvidaste tu contraseña?</a>
						</div>
					</div>
					<div class="card ">

						<div class="card-action">
							<div style="margin-bottom: 0.75rem;">
								Si aún no tienes tu cuenta
							</div>
							<div>
								<a href="{{ path('register') }}" rel="noopener noreferrer">
									<button class="btn bg-action" type="submit">
										Registrate
									</button>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
